<div class="container">
  <div class="row">
    <div class="col-xs-12 col-lg-3">
      <%= cl_image_tag @user.photo, height: 200, width: 200, crop: :fill %>

      <%= simple_form_for @user, :url => pages_photo_path, :method => :post do |f| %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, "Update photo" %>
      <% end %>
    </div>
    <div class="col-xs-12 col-lg-9">
      <%= simple_form_for @user, :url => pages_info_path, :method => :post do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :phone_number %>
        <%= f.input :description %>
        <%= f.button :submit, "Update info" %>
      <% end %>
    </div>
    <div class="col-xs-12 col-lg-12 text-right">
      <%= link_to "Add my dog", pages_dog_path, class: "btn btn-primary text-right" %>
    </div>
  </div>
</div>
