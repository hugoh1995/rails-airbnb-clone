      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= @dogs.all[-1].photo.url %>); background-size: 100%;height: 200px;">
        <div class="card-category">Popular</div>
        <div class="card-description">
          <h2><%= @dogs.all[-1].name %></h2>
