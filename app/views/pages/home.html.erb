<!-- Banner-top -->
 <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_url('background.jpg') %>);">
    <div class="row">
      <div class="banner-content">
        <div class="col-lg-12">
          <div class="name"><%= image_tag('name.png') %></div>
          <p>Dogs on demand, in your neighbourhood.</p>
          <%= form_tag(dogs_path, method: 'GET') do -%>
            <input type="text" class="form-control" placeholder="Where" name="place">
            <div><%= submit_tag "Find a dog" ,:class=>"btn btn-primary btn-lg" %></div>
          <% end -%>
        </div>
      </div>
    </div>
</div>
