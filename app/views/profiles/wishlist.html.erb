<%= render 'shared/nav_bar_profile' %>

<div class="container">
<h1>Favorite dogs (<%= @dogs.count %>)</h1>

<div class="row">
  <div class="card-container col-xs-12">
      <% @dogs.each do |dog|%>
          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= Dog.find(dog).photo.url %>); background-size: cover;height: 200px;">
              <%= link_to "", dog_path(dog) %>
              <div class="card-description">
                <h2><%= Dog.find(dog).name %></h2>
              </div>
              <%= link_to "", dog_path(dog) , class: "card-link"  %>
            </div>
          </div>
      <% end %>
  </div>
</div>
</div>
