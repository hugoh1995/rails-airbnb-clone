<%= render 'shared/nav_bar_profile' %>
<div class="container">
  <div class="row profile-container">
    <div class="col-xs-12 col-lg-3 margin-b-25">
      <%= cl_image_tag @user.photo, height: 200, width: 200, crop: :fill %>

      <%= simple_form_for @user, :url => profiles_photo_path, :method => :post do |f| %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, "Update photo" %>
      <% end %>
    </div>
    <div class="col-xs-12 col-lg-9 margin-b-25">
      <%= simple_form_for @user, :url => profiles_info_path, :method => :post do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :phone_number %>
        <%= f.input :description %>
        <%= f.button :submit, "Update info" %>
      <% end %>
    </div>
    <div class="col-xs-0 col-lg-3">
    </div>
    <div class="col-xs-12 col-lg-9">
      <%= simple_form_for @user.address, :url => profiles_address_path, :method => :post do |f| %>
        <%= f.input :street %>
        <%= f.input :city %>
        <%= f.input :country %>
        <%= f.button :submit, "Update address" %>
      <% end %>
    </div>
    <div class="col-xs-12 col-lg-12 text-right">
      <%= link_to "Add my dog", pages_dog_path, class: "btn btn-primary text-right" %>
    </div>
  </div>
</div>
