<div class="container card-container">
  <div class="row">
    <% @dogs.each do |dog|%>
      <% if dog.name != nil %>
        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= dog.photo.url %>); background-size: 100%;height: 200px;">
            <div class="card-category">Near from you</div>
            <div class="card-description">
              <h2><%= dog.name %></h2>
              <p><%= dog.description %></p>
            </div>
            <%= link_to "", dog_path(dog) ,:class=>"card-link"  %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

