<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h2><%= @dog.name%></h2>
      <div class="card" style="background-image: url(<%= @dog.photo.url %>); background-size: 100%;height: 200px;">
      </div>
      <p><%= @dog.breed.name%>, <%= (Date.today - Date.new(@dog.birthdate.year, @dog.birthdate.month, @dog.birthdate.day)).to_i / 360 %> years old.</p>

    </div>
    <div class="col-lg-4">
      <h2>Description</h2>
      <%= @dog.description%>
      <h2>Personality</h2>
    </div>
  </div>
</div>

<div class="wrapper-request">
  <div class="row">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-3">
      <div class="row row-bg">
      <%= simple_form_for [@dog, @request] do |f| %>
          <div class="col-lg-12">
            <div class="form-group">
              <div class='input-group date' id='datetimepicker1'>
                <%= f.input :start_datetime %>
              </div>
            </div>
          </div>
          <div class="col-lg-12">
              <%= f.input :end_datetime %>
          </div>
          <div class="col-lg-12">
              <%= f.input :message %>
          </div>
              <%= f.input :dog_id, as: :hidden, input_html: {value: @dog.id} %>
              <%= f.input :user_id, as: :hidden, input_html: {value: current_user.id} %>
          <div class="col-lg-2">
              <%= f.button :submit, "Book", input_html: { class: 'btn btn-primary' } %>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>



